Sign Up:

<%= form_for @user do |f| %>
  <%= f.label :username, "Username: " %>
  <%= f.text_field :username %><br>
  <%= f.label :password, "Password: " %>
  <%= f.password_field :password %><br>
  <%= f.submit %>
<% end %>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>