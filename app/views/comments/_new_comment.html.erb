<%= form_for @new_comment, url: @url do |f| %>
    <%= f.label :Comment_Body %><br>
    <%= f.text_field :body %><br>
    <%= f.hidden_field :question, :value => @question.id %>
    <% if @answer %>
      <%= f.hidden_field :answer, :value => @answer.id %>
    <% end %>
    <%= f.submit %><br>
  <% end %>
