<% if logged_in? %>
  <h3>Make a Question:</h3>
  <%= form_for @question do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :body %><br>
    <%= f.text_area :body %><br>

    <%= f.submit %><br>
  <% end %>
<% else %>
  <h3>Please login to ask questions, add answers, or post comments!</h3>
<% end %>

